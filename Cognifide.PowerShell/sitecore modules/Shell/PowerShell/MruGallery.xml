<?xml version="1.0" encoding="utf-8"?>

<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense"
         xmlns:shell="http://www.sitecore.net/shell" xmlns:x="http://www.sitecore.net/xaml">
  <Gallery.MruGallery>
    <Gallery>
      <CodeBeside Type="Cognifide.PowerShell.Client.Controls.MruGallery, Cognifide.PowerShell" />
      <Script src="/sitecore modules/PowerShell/Scripts/flexie.min.js"></Script>
      <Script src="/sitecore modules/PowerShell/Scripts/jquery-1.10.2.min.js" runat="server"></Script>
      <Script src="/sitecore modules/PowerShell/Scripts/jquery-migrate-1.2.1.min.js" runat="server"></Script>
      <Script>$ise = jQuery.noConflict();</Script>
      <Script>
        jQuery(document).ready(function($) {
          $("#SearchPhrase").keypress(function(event) {
            if (event.which === 13) {
                event.preventDefault();
                scForm.postEvent(this,event,'ChangeSearchPhrase');
            };
          });
    	});
	  </Script>
      <Stylesheet Src="/sitecore modules/PowerShell/Styles/flex.css" DeviceDependant="true" runat="server"
                  x:placeholder="Stylesheets" />
      <Stylesheet Src="/sitecore modules/PowerShell/Styles/Gallery.css" DeviceDependant="true" runat="server"
                  x:placeholder="Stylesheets" />
        <Stylesheet>
          .path { color:gray;}
          .name { float: left; padding: 5px 0;}
          .location { clear: both; }
          .scClickFont,  .scClick_Hover{ width: 40px; clear: both;}
          .versionNum, .versionNumSelected { padding: 4px 0; width: 30px; float: left; }
          .scMenuPanelItem, .scMenuPanelItem_Hover, .scMenuPanelItemSelected { padding: 4px 5px; }
          .scInitialHeight { height: initial; width: 100%; }
        </Stylesheet>

      <div class="scStretch">
        <div class="scGalleryContent13">
          <GalleryMenu ID="Options" Class="scStretch">

            <MenuPanel Height="100%">
              <Tabstrip ID="Tabs">
                <Tab ID="SearchTab" Header="Recent">
                  <Edit ID="SearchPhrase" Width="100%" GridPanel.Width="100%" autocomplete="off" placeholder="Script name to search for - prefix with e.g. 'master:' to narrow to specific database"/>
		          <GalleryMenu ID="SearchResults" Class="scStretch scInitialHeight">
                    <MenuPanel Height="100%">
                      <Scrollbox ID="Scripts" Class="scScrollbox scInitialHeight">
                      </Scrollbox>
                    </MenuPanel>
                  </GalleryMenu>
                </Tab>

                <Tab ID="ContentTab" Header="Content Tree">
                  <DataContext ID="ContentDataContext" />
                  <Combobox ID="Databases" Change="ChangeDatabase" />
                  <TreeviewEx ID="ContentTreeview" Style="width: 0px" DataContext="ContentDataContext"
                              Click="ContentTreeview_Click" />
                </Tab>
              </Tabstrip>
            </MenuPanel>
            <!--MenuHeader Header="Other" /-->
          </GalleryMenu>
        </div>
        <div class="scGalleryBottom13">
          <GalleryMenuLine />
          <Gallery.Grip />
        </div>
      </div>
    </Gallery>
  </Gallery.MruGallery>
</control>