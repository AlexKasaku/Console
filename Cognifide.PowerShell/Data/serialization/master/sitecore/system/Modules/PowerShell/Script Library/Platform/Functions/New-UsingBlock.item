function New-UsingBlock {
    [CmdletBinding()]
    param (
        [Parameter(Mandatory = $true)]
        [IDisposable]
        $InputObject,
  
        [Parameter(Mandatory = $true)]
        [ScriptBlock]
        $ScriptBlock
    )
 
    try {
        $ScriptBlock.Invoke()
    } finally {
        if ($InputObject) {
            $InputObject.Dispose()
        }
    }
}
