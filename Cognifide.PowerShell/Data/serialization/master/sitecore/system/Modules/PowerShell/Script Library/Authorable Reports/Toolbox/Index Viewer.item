field: {B1A94FF0-6897-47C0-9C51-AA6ACB80B1F0}
name: Script
key: script
content-length: 3401

$indexOptions = @{}
foreach($index in [Sitecore.ContentSearch.ContentSearchManager]::Indexes) {
    $indexOptions[$index.Name] = $index.Name
}

$index="sitecore_master_index";

$props = @{
    Parameters = @(
        @{Name="index"; Title="Choose the report index"; Options=$indexOptions; Tooltip="Only items in this index will be returned."}
    )
    Title = "Index Viewer Report"
    Description = "Choose the criteria for the report."
    Width = 600
    Height = 300
    ShowHints = $true
}

$result = Read-Variable @props

if($result -eq "cancel"){
    exit
}

$database = Find-Item -Index $index -First 1 | % { $_.DatabaseName } 
$root = Get-Item -Path (@{$true="$($database):\content\home"; $false="$($database):\content"}[(Test-Path -Path "$($database):\content\home")])

$propertyOptions = [ordered]@{}
$searchResultItem = New-Object Sitecore.ContentSearch.SearchTypes.SearchResultItem
$properties = $searchResultItem.GetType().GetProperties() | Sort-Object -Property Name
foreach($property in $properties) {
    $attribute = $property.GetCustomAttributes($false) | Where-Object { $_.IndexFieldName } | Select-Object -First 1
    if($attribute) {
        $propertyOptions[$property.Name] = $attribute.IndexFieldName
    }
}

$topOptions = [ordered]@{"All"=0;"25"=25;"100"=100;"1000"=100}

$filterOptions = [ordered]@{"DecendentOf"="DecendentOf"; "Equals"="Equals"; "StartsWith"="StartsWith"; "Contains"="Contains"; "EndsWith"="EndsWith"}
$props.Parameters = @(
    @{Name="root"; Title="Choose the report root"; Tooltip="Only items in this branch will be returned."},
    @{Name="topCount"; Value="25"; Title="Choose how much to return"; Options=$topOptions; Tooltip="Only the top results will be returned.";},
    @{Name="searchField"; Value="_language"; Title="Search Field"; Options=$propertyOptions; Tooltip=""; Columns="3"},
    @{Name="searchOperator"; Value="Equals"; Title="Search Filter"; Options=$filterOptions; Tooltip=""; Columns="3"},
    @{Name="searchText"; Value=""; Title="Search Value"; Tooltip=""; Columns="6"}
)
$result = Read-Variable @props

if($result -eq "cancel"){
    exit
}

$data = @{
    Index = $index
}

if($searchText) {
    $data.Criteria = @{
        Field = $searchField
        Filter = $searchOperator
        Value = $searchText
    }
} else {
    $data.Criteria = @{
        Filter = "DescendantOf"
        Value = $root
    }
}

$details = @"
Documents: $([Sitecore.ContentSearch.Utilities.IndexHealthHelper]::GetIndexNumberOfDocuments($data.Index)),
Fields: $([Sitecore.ContentSearch.Utilities.IndexHealthHelper]::NumberOfFields($data.Index)),
Modified: $([Sitecore.ContentSearch.Utilities.IndexHealthHelper]::LastModified($data.Index))
"@
if($topCount -gt 0) {
    $data.First = $topCount
    $details += ", Showing the top $($topCount)"
}

Find-Item @data | 
    Show-ListView -Property Name, Language, Version, Url, Path,  
        @{Label="Fields"; Expression={ "<a href='#' style='color:#f00' onclick=`"javascript:return scForm.postEvent(this,event,'listview:action(scriptDb=master,scriptID={EE75FFCF-7B3A-46CD-86AB-6536AD8675AA},index=$index,id=$([System.Web.HttpUtility]::UrlEncode($_.Fields["_uniqueid"])))')`">Show Full Info</a>" } } `
        -Title "Index Viewer" -ActionData $data -InfoTitle "Index: $($data.Index)" -InfoDescription $details
Close-Window
