name: Script
key: script
content-length: 1333

$indexOptions = @{}
foreach($index in [Sitecore.ContentSearch.ContentSearchManager]::Indexes) {
    $indexOptions[$index.Name] = $index.Name
}

$root = Get-Item -Path (@{$true="master:\content\home\"; $false="master:\content\"}[(Test-Path -Path master:\content\home)])

$props = @{
    Parameters = @(
        @{Name="index"; Title="Choose the report index"; Value="sitecore_master_index"; Options=$indexOptions; Tooltip="Only items in this index will be returned."}
    )
    Title = "Index Viewer Report"
    Description = "Choose the criteria for the report."
    Width = 600
    Height = 300
    ShowHints = $true
}

$result = Read-Variable @props

if($result -eq "cancel"){
    exit
}

$data = @{
    Index = $index
    Criteria = @{
        Filter = "StartsWith"
        Field = "_fullpath"
        Value = $root.ItemPath
    }
}

$details = @"
Documents: $([Sitecore.ContentSearch.Utilities.IndexHealthHelper]::GetIndexNumberOfDocuments($data.Index)),
Fields: $([Sitecore.ContentSearch.Utilities.IndexHealthHelper]::NumberOfFields($data.Index)),
Modified: $([Sitecore.ContentSearch.Utilities.IndexHealthHelper]::LastModified($data.Index))
"@

Find-Item @data | Show-ListView -Property * -Title "Index Viewer" -ActionData $data -InfoTitle "Index: $($data.Index)" -InfoDescription $details
