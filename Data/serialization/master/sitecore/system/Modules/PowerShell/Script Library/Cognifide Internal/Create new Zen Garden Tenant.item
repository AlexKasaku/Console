#remove-item 'master:\templates\Tenant Templates\New Tenant'
$masterTenantTemplates = "master:/templates/Tenant Templates/Demo"
$tenantName = "New tenant"
$marketName = "int"
$hostName = "newtenant"
<#$result = Read-Variable -Parameters `
    @{ Name = "tenantName"; Value="New tenant"; Title="Tenant Name"}, `
    @{ Name = "marketName"; Value="int"; Title="Market Name"} `
    -Description "This script will create a new fully functional tenant within your Zen Garden enabled Sitecore instance." `
    -Title "Create a new Zen Garden tenant" -Width 500 -Height 320 `
    -OkButtonName "Proceed" -CancelButtonName "Abort" 
    
if($result -ne "ok")
{
    Exit
}
#>

$tenantTemplatesPath = "master:/templates/Tenant Templates/$tenantName"
$tenantPath = "master:/content/$tenantName"
$marketPath = "$tenantPath/$marketName"

# Create Templates
#Copy-Item "master:/templates/Tenant Templates/Demo" $tenantPath -Recurse
$tenant = Get-Item "master:/templates/Tenant Templates/$tenantName"
$tenant."__Display name" = $tenantName

#Replace Insert Options to link to new templates
gci $masterTenantTemplates -Recurse | `
    Where-Object { $_.TemplateName -eq "Template" } | `
    ForEach-Object {
        $oldTemplateId = $_.Id
        $newTemplateId = (Get-Item "$tenantPath/$($_.Name)").Id
        gci -path $tenantTemplatesPath -recurse -Filter "__Standard Values" | ForEach-Object { $_.__Masters = $_.__Masters -replace $oldTemplateId, $newTemplateId}
}

#Create Tenant
New-Item -Path master:\content -Name $tenantName -ItemType "Cognifide/ZenGarden/TenantTemplate"

#Create Market
New-Item -Path $tenantPath -Name $marketName -ItemType "Branches/Cognifide/ZenGarden/MarketBranch"

$site = Get-Item "$marketPath/Settings/Sites/Site"
$site.HostName = $HostName
$site.StartItem = (Get-Item "$marketPath/Home").ID
$settings = Get-Item "$marketPath/Settings"
$settings.Templates = (Get-Item $tenantTemplatesPath).ID
$designs = Get-Item "$marketPath/Presentation/Designs"
$designs.Theme = "{FE5D7FDF-89C0-4D99-9AA3-B5FBD009C9F3}=%7b5BC33F0E-A0F8-434E-9808-E32C6BABF76E%7d"
New-Item -Path 'master:\media library' -Name $tenantName -ItemType "System/Media/Media folder"

