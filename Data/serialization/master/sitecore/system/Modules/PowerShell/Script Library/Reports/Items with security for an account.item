<#
    .SYNOPSIS
        Reports on which of the items contains security settings for a specific user.
        
    .DESCRIPTION
        Prompts the user with an option to specify the item path and user account with for the purpose of reporting on items with specific user security.
#>

$item = Get-Item master:\content\

$props = @{
    Parameters = @(
        @{
            Name = "item"
            Title="Start Item"
            Tooltip="Branch you want to analyse."
        },
        @{
            Name = "user"
            Title="Select User"
            Tooltip="Tooltip for user"
            Editor="user role"
        }
    )
    Title = "Security for a user"
    Description = "This report will analyse the branch and will tell you which of the pages have security set for a specific user."
    Width = 600
    Height = 280
    OkButtonName = "Proceed"
    CancelButtonName = "Abort"
}

$result = Read-Variable @props

if($result -ne "ok") {
    Close-Window
    Exit
}

$user = $user.Replace("\","\\")
if("$user" -eq "") {
    $user="\|"
}

Get-ChildItem -Path $item.ProviderPath -Recurse -Version * -Language * | Where-Object {$_.__Security -match $user } |
    Show-ListView -PageSize 30 -Property @{Label="Name"; Expression={$_.DisplayName} }, Version, Language,
        @{Label="Updated"; Expression={$_.__Updated} },
        @{Label="Created"; Expression={$_.__Created} },
        @{Label="Path"; Expression={$_.ItemPath} },
        @{Label="Security"; Expression={$_.__Security} }

Close-Window
