<#
    .LINK
        http://blog.najmanowicz.com/2015/04/13/rapid-api-prototyping-for-sitecore-with-powershell-extensions/
#>

#$url = "http://console/-/script/v2/master/ChildrenAsJson?item=content&user=admin&password=b"
#Invoke-RestMethod -Uri $url -Method GET -ContentType application/json

function Invoke-ApiScript {
    param(
        [Parameter(Mandatory=$true, Position=0)]
        [scriptblock]$ScriptBlock
    )
    
    $watch = New-Object System.Diagnostics.Stopwatch

    $watch.Start()
    $items = $ScriptBlock.Invoke()
    $watch.Stop()
    
    [ordered]@{
        Status = "Success"
        Message = "The request completed successfully."
        Timespan = $watch.Elapsed.ToString("g")
        Timestamp = [datetime]::UtcNow.ToString("yyyy-MM-ddTHH\:mm\:ss.fffffffzzz")
        Results = $items
    } | ConvertTo-Json
}
