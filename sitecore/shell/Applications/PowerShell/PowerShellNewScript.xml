<?xml version="1.0" encoding="utf-8"?>

<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <PowerShellNewScript>
    <FormDialog ID="Dialog" Icon="Applications/32x32/folder_out.png" Header="Item browser"
                Text="Select the item that you want to open." OKButton="Open">

      <CodeBeside Type="Cognifide.PowerShell.SitecoreIntegrations.Applications.PowerShellIseNew,Cognifide.PowerShell" />

      <DataContext ID="ScriptDataContext" />

      <GridPanel Width="100%" Height="100%" Style="table-layout:fixed">
        <Scrollbox Width="100%" Height="100%" Class="scScrollbox scFixSize scFixSize8" Background="white"
                   Border="1px inset" Padding="0" GridPanel.VAlign="top" GridPanel.Height="100%">
          <TreeviewEx ID="Treeview" Click="SelectTreeNode" DblClick="TreeviewDblClick" DataContext="ScriptDataContext"
                      ShowRoot="true" ContextMenu='Treeview.GetContextMenu("contextmenu")' />
        </Scrollbox>

        <Border Padding="4px 0px 4px 0px">
          <GridPanel Width="100%" Columns="2">

            <Border Padding="0px 4px 0px 0px">
              <Literal Text="Name:" />
            </Border>

            <Edit ID="Filename" Width="100%" GridPanel.Width="100%" />
          </GridPanel>
        </Border>

      </GridPanel>

    </FormDialog>
  </PowerShellNewScript>
</control>